<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="biblioteca_homepage" path="/">
        <default key="_controller">BibliotecaBundle:Default:index</default>
    </route>

    <route id="biblioteca_home" path="/index">
        <default key="_controller">BibliotecaBundle:Default:index</default>
    </route>

    <route id="biblioteca_acervo" path="/acervo">
        <default key="_controller">BibliotecaBundle:Acervo:index</default>
    </route>

    <route id="biblioteca_acervo_cadastro" path="/acervo/cadastro">
        <default key="_controller">BibliotecaBundle:Acervo:cadastrar</default>
    </route>

    <route id="_security_login" path="/login">
        <default key="_controller">AppBundle:Security:login</default>
    </route>

    <route id="_security_check" path="/login_check">
        <default key="_controller">AppBundle:Security:loginCheck</default>
    </route>

    <route id="_security_logout" path="/logout">
        <default key="_controller">AppBundle:Security:logout</default>
    </route>

</routes>
